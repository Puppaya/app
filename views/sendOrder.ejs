<%- include('header') %>
    <div class="card card body border border-3"
        style="height: 500px; width: 1000px; margin-left: 220px; margin-top: 80px;">
        <div class="row justify-content-center">
            <div class="col-lg-9 mt-3">
                <h1 class="mb-3 text-center">Shipping Info</h1>
                <b> Bill No <%= orderId %></b>
                <form method="post">
                    <div class="row g-3 mt-5">
                        <div class="col-md-6">
                            <label for="your-name" class="form-label">Shipping Name</label>
                            <input type="text" class="form-control" name="track_name" required>
                        </div>
                        <div class="col-md-6">
                            <label for="your-surname" class="form-label">Track Code</label>
                            <input type="text" class="form-control" name="track_code" required>
                        </div>
                        <div class="col-md-6">
                            <label for="your-email" class="form-label">Date</label>
                            <input type="date" class="form-control" name="send_date" required>
                        </div>
                        <div class="col-md-6">
                            <label for="your-email" class="form-label">*Remark*</label>
                            <input type="text" class="form-control" name="send_remark">
                        </div>
                        <div class="col-12">
                            <div class="row">
                                <div class="col-md-6">
                                    <button type="submit" class="btn btn-success w-100 fw-bold">Confirm</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <%- include('footer') %>