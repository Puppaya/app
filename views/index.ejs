<%- include('page_header') %>

<%- include('hero_section') %>

  <div class="row mt-2 p-2">
    <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2 col-12" style="margin-top: 15px;">
      <h5 class="text-center">ຄົ້ນຫາຕາມປະເພດ</h5>
      <% cate.forEach((c)=> { %>
        <div class="list-group list-group-flush">
          <a href="/?cateId=<%= c.id %>" class="list-group-item list-group-item-action">
            <%= c.name %>
          </a>
        </div>
        <% }) %>
    </div>
    <div class="col-xl-10 col-lg-10 col-md-10 col-sm-10 col-12">
      <div class="row">
        <% pro.forEach((p)=> { %>
          <div class="col-md-3 col-sm-6 col-xl-3 mt-3" id="product-<%= p.id %>">
            <div class="card custom-card mb-3" id="card">
              <a href="/proDetail/<%= p.id %>" class="nav-link">
                <img src="images/<%= p.img %>" class="card-img-top object-fit-fill border rounded" alt="Card Image 1" width: 100%; height: 300px;>
                <div class="card-body">
                  <b class="card-title fs-6"id="text-ellipsis">
                    <%= p.name %>
                  </b>
                  <div class="mb-4">
                    <span class="card-text text-danger fw-bolder float-start">
                      <%= new Intl.NumberFormat('th-TH', { style: 'decimal' }).format(p.price) %>
                        ກີບ
                    </span>
                    <span class="text-secondary float-end">
                      ຂາຍແລ້ວ <%= soldItems.get(p.id) || 0 %> ອັນ%>
                    </span>
                  </div>
                </div>
              </a>
            </div>
          </div>
          <% }) %>
      </div>
    </div>
  </div>
  <%- include('page_footer') %>