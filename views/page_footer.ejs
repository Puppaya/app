<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
    crossorigin="anonymous"></script>
<script>
    // เรียกใช้ Tooltip ทุกๆ องค์ประกอบที่มี data-bs-toggle="tooltip"
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
    var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl)
    })
    document.addEventListener("DOMContentLoaded", function () {
        const quantityInput = document.getElementById("form1");

        quantityInput.addEventListener("change", function () {
            if (quantityInput.value < 1) {
                quantityInput.value = 1;
            }
        });
    });

    // หาคำสั่ง input โดยใช้ id ของ input
    const imageInput = document.getElementById('imageInput');

    // เพิ่ม Event Listener เมื่อมีการเปลี่ยนแปลงใน input
    imageInput.addEventListener('change', function () {
        // เช็คว่ามีไฟล์ถูกเลือกหรือไม่
        if (this.files && this.files[0]) {
            const reader = new FileReader();

            reader.onload = function (e) {
                // เมื่ออ่านไฟล์เสร็จแล้ว กำหนดค่าให้กับ src ของ <img> tag
                document.getElementById('previewImage').src = e.target.result;
            }

            // อ่านไฟล์รูปภาพ
            reader.readAsDataURL(this.files[0]);
        }
    });

</script>


</body>

</html>