<%- include('header') %>
    <form action="/profile" method="post">
        <div class="card mt-5 mx-auto border border-3" style="width: 600px;">
            <div class="card-body">
                <div class="card-title text-center">
                    <h3>Edit Profile</h3>
                </div>
                <div class="mt-3">
                    <label class="mb-1">Name</label>
                    <input type="text" name="name" class="form-control" value="<%= user.name %>">
                </div>
                <div class="mt-3">
                    <label class="mb-1">Username</label>
                    <input type="text" name="usr" class="form-control" value="<%= user.usr %>">
                </div>
                <div class="mt-3">
                    <label class="mb-1">Password</label>
                    <input type="password" name="pwd" class="form-control">
                </div>
                <div class="mt-3 text-center">
                    <button class="btn btn-success" type="submit" style="width: 100px;">
                        Save
                    </button>
                </div>
                <% if(session.message != undefined) { %>
                    <div class="alert alert-success mt-3">
                        <%= session.message %>
                        <%= session.message = undefined %>
                    </div>
                <% } %>
            </div>
        </div>
    </form>
    <%- include('footer') %>